        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/layout5">

            <TextView
                android:id="@+id/text8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Product Options"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintHorizontal_weight="7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/text9"
                app:layout_constraintTop_toBottomOf="@+id/layout5"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/text9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Select"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintLeft_toRightOf="@+id/text8"
                app:layout_constraintRight_toLeftOf="@+id/img4"
                app:layout_constraintTop_toBottomOf="@+id/layout5"
                tools:ignore="NotSibling" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:src="@drawable/ic_right_arrow"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/text9"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout5"
                tools:ignore="NotSibling" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout6"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/layout6">

            <ImageView
                android:id="@+id/img5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_home"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/img6"
                app:layout_constraintTop_toBottomOf="@+id/layout6"
                tools:ignore="NotSibling" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:src="@drawable/message"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintLeft_toRightOf="@+id/img5"
                app:layout_constraintRight_toLeftOf="@+id/btnOne"
                app:layout_constraintTop_toBottomOf="@+id/layout6"
                tools:ignore="NotSibling" />

            <Button
                android:id="@+id/btnOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Add To Card"
                android:layout_marginLeft="10dp"
                android:textColor="#C14119"
                android:background="@drawable/button_border"
                app:layout_constraintHorizontal_weight="3"
                app:layout_constraintTop_toBottomOf="@+id/layout6"
                app:layout_constraintRight_toLeftOf="@+id/btnTwo"
                app:layout_constraintLeft_toRightOf="@+id/img6"
                tools:ignore="NotSibling"
                />
            <Button
                android:id="@+id/btnTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Buy Now"
                android:background="#C14119"
                android:textColor="#FFFFFF"
                app:layout_constraintHorizontal_weight="3"
                app:layout_constraintTop_toBottomOf="@+id/layout6"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/btnOne"
                tools:ignore="NotSibling"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

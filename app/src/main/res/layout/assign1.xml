<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:src="@drawable/flower1"
        android:scaleType="centerCrop"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oeschinen Lake Campground"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="40px"
            android:layout_marginLeft="20px"
            />
        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_toRightOf="@+id/txt1"
            android:layout_marginTop="70px"
            android:layout_marginLeft="40dp"
            />
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="41"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="70px"
            android:layout_toRightOf="@+id/img1"
            />
        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kandersteg, Switzerland"
            android:textSize="20sp"
            android:layout_below="@+id/txt1"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_call_24"
            android:layout_marginTop="80px"
            android:layout_marginLeft="20dp"
            android:paddingLeft="20px"
            />
        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALL"
            android:layout_below="@+id/img2"
            android:layout_marginLeft="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            />
        <ImageView
            android:id="@+id/img3"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_near_me_24"
            android:layout_marginTop="80px"
            android:layout_toRightOf="@+id/img2"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROUTE"
            android:layout_below="@+id/img3"
            android:layout_toRightOf="@+id/txt4"
            android:layout_marginLeft="70dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            />
        <ImageView
            android:id="@+id/img4"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_share_24"
            android:layout_marginTop="80px"
            android:layout_toRightOf="@+id/img3"
            android:layout_marginLeft="20dp"
            android:paddingRight="50px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHARE"
            android:layout_below="@+id/img4"
            android:layout_toRightOf="@+id/txt5"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            />
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="600px">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A paragraph is a series of related sentences developing a central idea, called the topic. Try to think about paragraphs in terms of thematic unity: a paragraph is a sentence or a group of sentences that supports one central, unified idea. Paragraphs add one idea at a time to your broader argument."
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        />
</LinearLayout>
</LinearLayout>
</ScrollView>